{
  "databases": {
    "primary": {
      "type": "sqlite",
      "database": "game_data.db",
      "max_connections": 5
    },
    "cache": {
      "type": "sqlite",
      "database": "/tmp/game_cache.db",
      "max_connections": 5
    },
    "analytics": {
      "type": "mongodb",
      "host": "analytics-server",
      "port": 27017,
      "database": "game_analytics",
      "username": "analytics_user",
      "password": "analytics_pass"
    },
    "backup": {
      "type": "mysql",
      "host": "backup-server",
      "port": 3306,
      "database": "game_backup",
      "username": "backup_user",
      "password": "backup_pass"
    }
  },
  "default": "primary",
  "environments": {
    "development": "primary",
    "testing": "cache",
    "production": "primary"
  }
}